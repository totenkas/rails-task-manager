<div class="container m-5">
  <h1><%= @task.title %></h1>
  <div class='d-flex justify-content-between align-items-center'>
    <p class="h5"><%= @task.details %></p>
    <%= link_to "Edit task", edit_task_path, class: 'btn  btn-secondary' %>
  </div>
    <%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
<hr>
  <%= link_to "Back to list", tasks_path,  class: 'btn  btn-primary' %>
</div>
